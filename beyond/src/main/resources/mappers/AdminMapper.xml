<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.beyondata.co.kr.admin.member.dao.AdminMapper">

    <!-- 모든 회원 목록 조회 -->
    <select id="getAllMembers" resultType="com.beyondata.co.kr.member.vo.MemberVO">
        SELECT user_id    AS user_id,
               username,
               email,
               password,
               hp,
               is_active  AS isActive,
               role,
               join_at    AS joinAt,
               updated_at AS updatedAt
        FROM user
    </select>

    <!-- 특정 회원 조회 -->
    <select id="getMemberById" parameterType="String" resultType="com.beyondata.co.kr.member.vo.MemberVO">
        SELECT user_id    AS user_id,
               username,
               email,
               password,
               hp,
               is_active  AS isActive,
               role,
               join_at    AS joinAt,
               updated_at AS updatedAt
        FROM user
        WHERE user_id = #{user_id}
    </select>

    <!-- 회원 정보 수정 -->
    <update id="updateMember" parameterType="com.beyondata.co.kr.member.vo.MemberVO">
        UPDATE user
        SET username   = #{username},
            email      = #{email},
            password   = #{password},
            hp         = #{hp},
            role       = #{role},
            updated_at = NOW()
        WHERE user_id = #{user_id}
    </update>

    <select id="findAllUsersExceptLoggedIn" parameterType="String" resultType="com.beyondata.co.kr.member.vo.MemberVO">
        SELECT user_id    AS user_id,
               username,
               email,
               hp,
               role,
               is_active  AS isActive,
               updated_at AS updatedAt
        FROM user
        WHERE user_id != #{loggedInUserId}
    </select>

    <!-- 회원 삭제 by email -->
    <delete id="deleteMemberByEmail" parameterType="String">
        DELETE
        FROM user
        WHERE email = #{email}
    </delete>

    <!-- 회원 삭제 by user_id -->
    <delete id="deleteMemberById" parameterType="String">
        DELETE
        FROM user
        WHERE user_id = #{user_id}
    </delete>
</mapper>
